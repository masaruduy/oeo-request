<h1>New user</h1>
<% if current_user.email=="duy@automic.com"%>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>

		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :account %>
		<%= f.text_field :account %>

		<%= f.label :email %>
		<%= f.text_field :email %>
		
		<%= f.submit "Save account", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>

<% else %>
  <%= @user.email %>
<H2>You do not have access to this page.</h2>
<% end %>

<%= link_to 'Back', users_path %>
<%= link_to 'Show', @user %> |